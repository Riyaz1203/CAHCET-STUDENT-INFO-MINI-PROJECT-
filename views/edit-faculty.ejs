<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
</head>

<%- include('layout/header') %>
<br>
<br>
<br>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%- message.type%>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
<strong><%-message.message%></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (faculties != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Faculty ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Department</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% faculties.forEach((row , index) => { %>
                                <tr class="align-middle">
                                    <td><%= row.faculty_id %></td>
                                    <td><img style="height: 50px;width: 50px;" src="<%= row.image  %>" alt=""></td>
                                    <td><%= row.name  %></td>
                                    <td><%= row.department  %></td>
                                    <td><%= row.mobile_no %></td>
                                    <td>
                                        <a href="/editfac/<%= row._id  %>" class="text-success"><i class="fas fa-edit f-lg mx-1"></i></a>
                                        <a href="/deletee/<%= row._id  %>" class="text-danger"><i class="fas fa-trash f-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% }else{ %>
                    <h1 class="text-center text-secondary mt-5">No faculty found in the database</h1>
                <% } %>
                
            </div>
        </div>
    </div>
</div>
